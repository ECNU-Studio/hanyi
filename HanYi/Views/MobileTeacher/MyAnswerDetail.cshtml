    <script src="http://cdn.staticfile.org/Plupload/2.1.1/plupload.dev.js"></script>
    <script src="~/assets/plugins/qinui/qiniu.js"></script>
    <script src="~/assets/js/mobileteacher/myanswerdetail.js"></script>
    <script>
        pagejs.init();
    </script>
