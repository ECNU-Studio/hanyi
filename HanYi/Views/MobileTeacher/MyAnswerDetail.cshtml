@using Entity.Entity;
@{
    ViewBag.Title = "收到的问答详情";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    var list = ViewBag.list as List<qa>;
    qa itemQA = new qa();
    if (list == null)
    {
        list = new List<qa>();
    }
    else if (list.Count > 0)
    {
        itemQA = list[0];
    }
}
