<script src="~/assets/js/jquery-1.10.2.min.js"></script>
<script src="~/assets/js/jquery.easing.1.3.js"></script>
<script type="text/javascript">
    /*保存中的样式*/
    var saving = function (savebtnid, text) {
        if (typeof (text) == "undefined" || text == null) {
            text = "保存中...";
        }
        $("#" + savebtnid).text(text);
        if ($("#" + savebtnid + ' .mask_btn').length > 0) {
            $('.mask_btn').show();
        }
        else {
            var $mask = '<div class="mask_btn" style="width:126px;height:36px;top:-36px;"></div>';
            $("#" + savebtnid).after($mask);
        }
    }
    var endsaveing = function (savebtnid, text) {
        if (typeof (text) == "undefined" || text == null) {
            text = "保存中";
        }
        $("#" + savebtnid).text(text);
        $('.mask_btn').hide();
    }
    $(function () {
        $('#username').focus();
        $("#password").keydown(function (event) {
            if (event.keyCode == 13) {
                login($("#alogin"));
            }
        });
    });
    var login = function (obj) {
        var userName = $("#username").val();
        var password = $("#password").val();
        var b = $("#b").attr("checked") == "checked" ? true : false;
        if (userName == "") {
            alert("用户名不能为空");
            return false;
        }
        if (password == "") {
            alert("密码不能为空");
            return false;
        }
        saving("alogin", "登录中...");
        var rqData = "name=" + userName;
        rqData += "&pwd=" + password;
        rqData += "&b=" + b;
        $.ajax({
            type: "POST",
            data: rqData,
            url: "/Account/PostLogin",
            success: function (res) {
                if (res.success) {
                    location.href = res.url;
                } else {
                    alert(res.message);
                }
                endsaveing("alogin", "登录");
            },
            error: function (res) {
                alert(res.message);
                endsaveing("alogin", "登录");
            }
        });
    }
</script>
