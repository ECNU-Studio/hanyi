@using HanYi.Util;
@using Entity.Entity;
@{
    ViewBag.Title = "课程";
    var teachers = ViewBag.teachers as List<teacheres>;
    if (teachers == null)
    {
        teachers = new List<teacheres>();
    }
}
<div class="content">
    <div class="c_title">
        <h5>@(ViewBag.Title)</h5>
    </div>
    <div class="c_inner_wraper">
        <div class="margin_btn clearfix">
            <div class="fun_btn fl">
                <a class="btn_show mr_20px" href="javascript:void" id="showAdd">添加课程</a>
                <a class="btn_show mr_20px" href="javascript:void" id="delbtn">删除</a>
            </div>
        </div>
        <div class="sep_line"></div>
        <div class="searchwrap" id="form">
            <div class="table_tit">
                <h5 class="fl">搜索结果</h5>
            </div>
            <div id="res">

            </div>
        </div>
    </div>
</div>
@*添加用户弹出框*@
<div class="frame_panel" id="open_panel" style="display:none;">
    <div class="frame_box" style="width: 400px; left: 50%; top: 20%;margin-left:-200px;">
        <div class="frame_close" onclick="$(this).parent().parent().hide(); CloseAllErrorTip();"></div>
        <div class="frame_title">添加课程</div>
        <div id="content">
            <div class="frame_wrap edit_wrap" style="padding-top:0;">
                <ul class="edit_ul">
                    <li class="col-12">
                        <div class="title">课程名称：</div>
                        <div class="value" style="position:relative;">
                            <div class="fl"><div class="Text_long"><input id="name" value="" placeholder="" class="Text_lt vali-Required" type="text" autocomplete="off" /></div></div>
                        </div>
                        <div class="bitian">*</div>
                    </li>
                    @*<li>
                        <div class="title" style="width:60px;">培训师：</div>
                        <div class="value">
                            <div class="nice-select">
                                <input type="text" id="teacherid" data-value="" class="inputselect vali-Required" value="请选择" readonly="readonly" />
                                <ul>
                                    @if (teachers.Count > 0)
                                    {
                                        foreach (var item in teachers)
                                        {
                                            <li data-value="@(item.id)">@(item.name)</li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="bitian">*</div>
                    </li>*@
                    <li class="multirow">
                        <div class="title" style="width:60px;">简介：</div>
                        <div class="value" style="width: 240px;">
                            <textarea style="width: 225px;" class="Textarea_lt vali-Required" id="coursesabstract"></textarea>
                        </div>
                        <div class="bitian">*</div>
                    </li>
                   <li class="col-12">
                       <div class="title" style="width:60px;">培训师：</div>
                       <div class="value" style="position:relative">
                           <div class="fl">
                               <div class="Text_middle">
                                   <input id="teacherid_input" placeholder="" class="Text_lt " type="text" value="">
                               </div>
                           </div>
                           <ul class="DropList" id="DropRes" style="width: 122px; float: left; display: none;"></ul>
                           <input id="teacherid" placeholder="" class="Text_lt vali-Required" data-for="teacherid_input" type="hidden" value="">
                           <div class="bitian">*</div>
                       </div>
                   </li>
                </ul>
                <div class="clearboth"></div>
                <div class="new_btn_frame">
                    <div class="save btn" id="savebtn"><a href="javascript:void(0)">保存</a></div>
                    <div class="cancel btn" onclick="$('.frame_panel').hide(); CloseAllErrorTip();"><a href="javascript:void(0)">取消</a></div>
                    <div class="clearboth"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/assets/js/course/index.js"></script>
    <script>
        pagejs.init();
    </script>
}


