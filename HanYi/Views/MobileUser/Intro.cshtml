@{
    ViewBag.Title = "平台介绍";
    //Layout = "~/Views/Shared/_LayoutMobile.cshtml";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>时时课课</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

    <!-- Link Swiper's CSS -->
    <link href="~/assets/plugins/swiperjs/swiper.css" rel="stylesheet" />

    <!-- Demo styles -->
    <style>
        html, body { position: relative; height: 100%; background-color: #f7f7f7; }
        body { background: #eee; font-family: Helvetica Neue, Helvetica, Arial, sans-serif; font-size: 14px; color: #000; margin: 0; padding: 0; }
        .swiper-container { width: 100%; height: 100%; }
        .swiper-slide { text-align: center; font-size: 18px; background: #fff; /* Center slide text vertically */ display: -webkit-box; display: -ms-flexbox; display: -webkit-flex; display: flex; -webkit-box-pack: center; -ms-flex-pack: center; -webkit-justify-content: center; justify-content: center; -webkit-box-align: center; -ms-flex-align: center; -webkit-align-items: center; align-items: center; }
        img { width: 100%; height: 100%;}
        .arrow_show {
            position: fixed;
            bottom: 10px;
            left: 41%;
            background: url(../assets/img/warrow.gif) no-repeat;
            background-size: contain;
            width: 60px;
            height: 60px;
            z-index: 9999;
            zoom: 1;
        }
    </style>
</head>
<body>
    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="~/assets/img/intro/intro_n1_01.jpg" />
                <i class="arrow_show"></i>
            </div>
            <div class="swiper-slide"><img src="~/assets/img/intro/intro_n2.jpg" /></div>
            <div class="swiper-slide"><img src="~/assets/img/intro/intro_n3.jpg" /></div>
            <div class="swiper-slide"><img src="~/assets/img/intro/intro_n4.jpg" /></div>
            <div class="swiper-slide"><img src="~/assets/img/intro/intro_n5.jpg" /></div>
            <div class="swiper-slide"><img src="~/assets/img/intro/intro_n6.jpg" /></div>
            <div class="swiper-slide"><img src="~/assets/img/intro/intro_n7.jpg" /></div>
            
        </div>
        <!-- Add Pagination -->
        @*<div class="swiper-pagination"></div>*@
    </div>
    
    <script src="~/assets/js/jquery-1.10.2.min.js"></script>
    <!-- Swiper JS -->
    <script src="~/assets/plugins/swiperjs/swiper.js"></script>
    <!-- Initialize Swiper -->
    <script>
        $(function () {
            setTimeout(function () {
                var swiper = new Swiper('.swiper-container', {
                    //pagination: '.swiper-pagination',
                    direction: 'vertical'
                });
            }, 300);
        });
    </script>
</body>
</html>